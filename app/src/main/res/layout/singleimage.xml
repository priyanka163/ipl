<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ecedb0"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="210dp"

        android:src="@mipmap/ic_launcher"
        android:id="@+id/image"
        android:background="@drawable/ripple"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"/>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="30dp">
    <LinearLayout
        android:layout_below="@+id/image"
        android:id="@+id/layoutfive"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:textSize="25dp"
            android:text="Bowling_Style"
            android:layout_width="20dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/laxman"
            android:layout_weight="1"
            android:text="set name"
            android:textSize="25dp"
            android:layout_marginLeft="5dp"
            android:layout_width="25dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/image"
        android:id="@+id/layoutfour"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:textSize="25dp"
            android:text="Name"
            android:layout_width="20dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:text="set name"
            android:id="@+id/texttwo"
            android:textSize="25dp"
            android:layout_marginLeft="5dp"
            android:layout_width="25dp"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:layout_below="@+id/image"
        android:id="@+id/layout"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:textSize="25dp"
            android:text="Role"

            android:layout_width="20dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:text="set name"
            android:id="@+id/textthree"
            android:textSize="25dp"
            android:layout_marginLeft="5dp"
            android:layout_width="25dp"            android:layout_height="wrap_content" />
    </LinearLayout>



    <LinearLayout
        android:layout_below="@+id/image"
        android:id="@+id/layoutone"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:textSize="25dp"
            android:text="Nationality"
            android:layout_width="20dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:text="set name"
            android:textSize="25dp"

            android:layout_width="25dp"            android:id="@+id/textfour"
            android:layout_height="wrap_content" />
    </LinearLayout>



    <LinearLayout
        android:layout_below="@+id/image"
        android:id="@+id/layouttwo"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:textSize="25dp"
            android:text="Batting_Style"
            android:layout_width="20dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:text="set name"
            android:id="@+id/textfive"
            android:textSize="25dp"
            android:layout_marginLeft="5dp"
            android:layout_width="25dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>

</LinearLayout>